{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:best-practices"],
  "timezone": "Europe/Berlin",
  "schedule": ["before 6am"],
  "automerge": true,
  "packageRules": [
    {
      "description": "Disable auto-merge for major updates",
      "automerge": false,
      "matchUpdateTypes": ["major", "replacement"]
    },
    {
      "description": "Add renovate label to all updates by default",
      "matchManagers": ["*"],
      "addLabels": ["renovate"]
    },
    {
      "description": "Label major updates",
      "matchUpdateTypes": ["major"],
      "addLabels": ["major"]
    },
    {
      "description": "Label minor updates",
      "matchUpdateTypes": ["minor"],
      "addLabels": ["minor"]
    },
    {
      "description": "Label patch updates",
      "matchUpdateTypes": ["patch"],
      "addLabels": ["patch"]
    },
    {
      "groupName": "Docker digest pins",
      "matchDatasources": ["docker"],
      "matchUpdateTypes": ["pinDigest"],
      "pinDigests": true,
      "addLabels": ["docker"]
    },
    {
      "groupName": "Docker digest updates",
      "matchDatasources": ["docker"],
      "matchUpdateTypes": ["digest"],
      "pinDigests": true,
      "addLabels": ["docker"]
    },
    {
      "groupName": "PostgreSQL major updates",
      "matchPackageNames": ["/postgres/", "/pgautoupgrade/"],
      "matchUpdateTypes": ["major"],
      "addLabels": ["postgresql"],
      "enabled": false
    },
    {
      "description": "Group non-major PostgreSQL updates",
      "groupName": "PostgreSQL non-major updates",
      "matchPackageNames": ["/postgres/", "/pgautoupgrade/"],
      "matchUpdateTypes": ["minor", "patch"],
      "addLabels": ["postgresql"]
    },
    {
      "groupName": "Linters and formatters",
      "matchPackageNames": ["commitlint ", "prettier"],
      "addLabels": ["linters"]
    },
    {
      "groupName": "GitHub Actions",
      "matchManagers": ["github-actions"],
      "addLabels": ["ci"]
    },
    {
      "groupName": "node",
      "matchPackageNames": ["node"]
    },
    {
      "description": "Do not pin digests for docker-compose and custom regex managers",
      "matchManagers": ["docker-compose", "custom.regex"],
      "pinDigests": false
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": ["/^\\.github/workflows/.+\\.ya?ml$/"],
      "matchStrings": ["postgres_version:\\s*\"(?<currentValue>[^\"]*)\""],
      "depNameTemplate": "postgres",
      "datasourceTemplate": "docker"
    },
    {
      "customType": "regex",
      "managerFilePatterns": ["/^\\.github/workflows/.+\\.ya?ml$/"],
      "matchStrings": [
        "npm install -g (?<depName>[a-z0-9-]+)@(?<currentValue>[0-9.]+)"
      ],
      "datasourceTemplate": "npm"
    }
  ]
}
