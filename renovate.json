{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:best-practices"],
  "minimumReleaseAge": "1 day",
  "timezone": "Europe/Berlin",
  "schedule": ["before 6am"],
  "packageRules": [
    {
      "matchCategories": ["docker"],
      "pinDigests": true
    },
    {
      "description": "Group Prettier across mise and workflows",
      "groupName": "Prettier",
      "matchPackageNames": ["prettier"],
      "automerge": true
    },
    {
      "description": "Group PostgreSQL packages",
      "groupName": "PostgreSQL",
      "automerge": false,
      "matchPackageNames": ["/pgautoupgrade/", "/^postgresql.*-client$/"]
    },
    {
      "description": "Automerge all non-major updates",
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": ["/^\\.github/workflows/.+\\.ya?ml$/"],
      "matchStrings": [
        "npm install -g (?<depName>[a-z0-9-]+)@(?<currentValue>[0-9.]+)"
      ],
      "datasourceTemplate": "npm"
    }
  ]
}
